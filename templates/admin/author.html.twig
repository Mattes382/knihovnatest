{% extends 'base.html.twig' %}

{% block title %}Autoři{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .row col-sm-5 { max-width: 100px; }

        .card-block {
            font-size: 1em;
            position: relative;
            margin: 0;
            padding: 1em;
            border: none;
            border-top: 1px solid rgba(34, 36, 38, .1);
            box-shadow: none;

        }
        .card {
            font-size: 1em;
            overflow: hidden;
            padding: 5;
            border: none;
            border-radius: .28571429rem;
            box-shadow: 0 1px 3px 0 #d4d4d5, 0 0 0 1px #d4d4d5;
            margin-top:20px;
        }
    </style>

    <div class="example-wrapper">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h4 class="pt-3">Seznam autorů</h4>
    <a href="{{ path('authorcreate') }}" class="btn btn-primary float-right mb-3">Přidat autora</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Jméno</th>
            <th colspan="2" scope="col">Akce</th>
        </tr>
        </thead>
        <tbody>
        {% for author in authori %}
            <tr>
                <th scope="row">{{ author.id }}</th>
                <th scope="row">{{ author.jmeno }}</th>
                <td><a href="{{ path('authoredit', {id: author.id}) }}">Upravit</a></td>
                <td><a class="text-danger" href="{{ path('authordelete', {id: author.id}) }}">Smazat</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}