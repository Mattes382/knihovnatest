{% extends 'base.html.twig' %}

{% block title %}Knížky{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table img{
        max-width: 100px;
    }

</style>

<div class="example-wrapper">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h4 class="pt-3">Seznam knih</h4>
    <a href="{{ path('knihacreate') }}" class="btn btn-primary float-right mb-3">Přidat knihu</a>
     <table class="table">
        <thead>
        <tr>

            <th scope="col">Název</th>
            <th scope="col">Autor</th>
            <th scope="col">Rok vydání</th>
            <th colspan="2" scope="col">Akce</th>
        </tr>
        </thead>
        <tbody>
        {% for kniha in knihy %}
        <tr>

            <td><a href="{{ path('knihashow', {id: kniha.id}) }}">{{ kniha.nazev }}</a></td>
            <td>{{ kniha.author }}</td>
            <td>{{ kniha.rokvydani }}</td>

            <td><a href="{{ path('knihaedit', {id: kniha.id}) }}">Upravit</a></td>
            <td><a class="text-danger" href="{{ path('knihadelete', {id: kniha.id}) }}">Smazat</a></td>
        </tr>
        {% endfor %}
        </tbody>
        </table>


        {% endblock %}
