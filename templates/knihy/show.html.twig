{% extends 'base.html.twig' %}

{% block title %}{{ kniha.nazev }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .rounded { max-width: 50%; }
    </style>
    <div class="example-wrapper">
        <img src="{{ '../uploads/' ~ kniha.obrazek }}" class="rounded" alt="...">
        <h1>{{ kniha.nazev }}</h1>
        <h3>{{ kniha.author }}</h3>
        <p>Roky vydání: {{ kniha.rokvydani }}</p>
        <p>Počet stran: {{ kniha.pocetstranek }}</p>
        <p class="mb-5">{{ kniha.detail }}</p>

        <h4>Žánry</h4>
        {% for zanr in kniha.zanry%}
        <p>{{ zanr }}</p>
        {% endfor %}
    </div>
{% endblock %}
